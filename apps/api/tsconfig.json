{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "../../",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
